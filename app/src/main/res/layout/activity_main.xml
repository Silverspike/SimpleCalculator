<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SimpleCalculator"
        android:textStyle="bold"
        android:background="#4B1306"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:padding="40dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:hint="0"
        android:id="@+id/etDisplay"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">


        <Button
            android:id="@+id/etOne"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="1"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etTwo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="2"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etThree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="3"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etSum"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="+"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">


        <Button
            android:id="@+id/etFour"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="4"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etFive"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="5"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etSix"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="6"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etSub"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="-"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">


        <Button
            android:id="@+id/etSeven"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="7"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etEight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="8"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etNine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="9"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etMul"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="*"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">


        <Button
            android:id="@+id/etZero"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="0"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:text="C"
            android:textSize="25sp" />

        <Button

            android:id="@+id/etAnswer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/holo_green_dark"
            android:text="="
            android:textSize="40sp" />

        <Button

            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:text="/"
            android:id="@+id/etDiv"
            android:background="@android:color/darker_gray"
            android:textSize="25sp" />


    </LinearLayout>




</LinearLayout>